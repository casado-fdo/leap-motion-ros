<?xml version="1.0" encoding="utf-8"?>
<robot name="leap_hands">
  
  <!-- Base link -->
  <link name="leap_base_link">
    <!-- Display sensor range bounding box -->
    <visual>
      <origin xyz="0 0 0.35" rpy="0 0 0"/>
      <geometry>
        <box size="0.7 0.7 0.7"/>
      </geometry>
      <material name="grey">
        <color rgba="0.8 0.8 0.8 0.3"/>
      </material>
    </visual>
  </link>

  <!-- Right Hand -->
  <link name="leap_right_hand">
    <visual>
      <origin xyz="-0.05 0.02 0" rpy="1.5708 -0.436332 1.5708"/>
      <geometry>
        <mesh filename="package://leap_motion_controller/urdf/meshes/hand.stl" scale="0.001 0.001 0.001" />
      </geometry>
      <material name="yellow-orange">
        <color rgba="0.9 0.6 0.2 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Left Hand -->
  <link name="leap_left_hand">
    <visual>
      <origin xyz="-0.05 -0.02 0" rpy="1.5708 0.436332 1.5708"/>
      <geometry>
        <mesh filename="package://leap_motion_controller/urdf/meshes/hand.stl" scale="-0.001 0.001 0.001" />
      </geometry>
      <material name="blue-violet">
        <color rgba="0.2 0.6 0.9 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Joints -->
  <joint name="right_hand_joint" type="floating">
    <parent link="leap_base_link"/>
    <child link="leap_right_hand"/>
  </joint>

  <joint name="left_hand_joint" type="floating">
    <parent link="leap_base_link"/>
    <child link="leap_left_hand"/>
  </joint>

</robot>
